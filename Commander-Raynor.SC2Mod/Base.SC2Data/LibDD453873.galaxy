// Functions
void libDD453873_gf_UnlockTalent (int lp_p) {
    // Automatic Variable Declarations
    // Implementation
    TechTreeUpgradeAddLevel(lp_p, "RaynorCommanderRapidRecruitment", 1);
    TechTreeUpgradeAddLevel(lp_p, "RaynorCommanderAirStrike", 1);
    TechTreeUpgradeAddLevel(lp_p, "RaynorCommanderNanoProjectors", 1);
    TechTreeUpgradeAddLevel(lp_p, "RaynorCommanderInfantryUpgradeCache", 1);
    TechTreeUpgradeAddLevel(lp_p, "RaynorCommanderPointDefenseDrone", 1);
    TechTreeUpgradeAddLevel(lp_p, "RaynorCommanderNewUnitBattlecruiser", 1);
    TechTreeUpgradeAddLevel(lp_p, "RaynorCommanderBattleBunkers", 1);
    TechTreeUpgradeAddLevel(lp_p, "RaynorCommanderOrbitaldroppods", 1);
    TechTreeUpgradeAddLevel(lp_p, "RaynorCommanderFactoryUpgradeCache", 1);
    TechTreeUpgradeAddLevel(lp_p, "RaynorCommanderVanadiumPlating", 1);
    TechTreeUpgradeAddLevel(lp_p, "RaynorCommanderArmoryUpgradeCache", 1);
    TechTreeUpgradeAddLevel(lp_p, "RaynorCommanderOrbitalDepots", 1);
    TechTreeUpgradeAddLevel(lp_p, "RaynorCommanderStarportUpgradeCache", 1);
    TechTreeUpgradeAddLevel(lp_p, "RaynorCommanderHyperionAdvancedTargetingSystems", 1);
    TechTreeUpgradeAddLevel(lp_p, "RaynorCommanderMercenaryMunitions", 1);
}

void libDD453873_gf_ShowHideTopBarRaynor (bool lp_showHideOptions, playergroup lp_players) {
    // Automatic Variable Declarations
    // Implementation
    if ((lp_showHideOptions == true)) {
        DialogControlSendAnimationEvent(libDD453873_gv_uI_TopBar.lv_topBar, lp_players, libDD453873_gv_cONST_TopBar_event_birth);
    }
    else {
        DialogControlSendAnimationEvent(libDD453873_gv_uI_TopBar.lv_topBar, lp_players, libDD453873_gv_cONST_TopBar_event_death);
    }
}

